<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %></div>
  <div class="field">
  <label>Body</label>
  <%= f.text_area :body %></div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

