<h1>Editing Book</h1>

<% if flash[:notice] %>
  <p id="notice">Book was successfully updated.</p>
<% end %>



<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<div class="field">
<label>Title</label>
<%= f.text_field :title %></div>
<div class="field">
<label>Body</label>
<%= f.text_area :body %></div>
<div class="actions">
<%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show",book_path %>
|
<a class="back" href="/books">Back</a>