<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
   <tr>
    <span><td><%= book.title %></td></span>
    <span><td><%= book.body %></td></span>
    <td><%= link_to "Show","/books/#{book.id}" %></td>
    <td><%= link_to "Edit",edit_book_path(book.id)  %></td>
    <td><%= link_to "Destroy",book_path(book),method: :delete %></td>
  </tr>
 <% end %>
  </thead>
</table>


<h2>New Book</h2>

<%= form_with model: @book do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %></div>
<div class="field">
  <label>body</label>
  <%= f.text_area :body %></div>

  <%= f.submit 'Create Book' %>
<% end %>